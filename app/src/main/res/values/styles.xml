<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:textColor">@color/enigmaColor</item>
    </style>

    <style name="BottomButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:background">@color/navBar</item>
    </style>
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <!--  Text Size  -->
        <item name="android:textSize">20dp</item>
        <!--  Query Text Color  -->
        <item name="android:textColorPrimary">@color/light_yellow</item>
        <!--  Hint Color  -->
        <item name="android:textColorHint">@color/white</item>
        <!--  Icon Color  -->
        <!--         <item name="android:tint">@color/light_yellow</item> -->
    </style>
    <style name="countdown_leaderboard" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/light_yellow</item>
    </style>
    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="questionNo">

        <item name="android:textSize">
            18.15sp
        </item>

        <item name="android:textColor">
            #0FA3B1
        </item>

        <item name="android:shadowColor">
            #A1654506
        </item>

        <item name="android:shadowDx">
            0
        </item>

        <item name="android:shadowDy">
            1.51
        </item>

        <item name="android:shadowRadius">
            1.51
        </item>

    </style>
    <style name="roomQuestion">

        <item name="android:textSize">
            18.15sp
        </item>

        <item name="android:shadowColor">
            #A1654506
        </item>

        <item name="android:shadowDx">
            0
        </item>

        <item name="android:shadowDy">
            1.51
        </item>

        <item name="android:shadowRadius">
            1.51
        </item>

    </style>

    <style name="BottomButtonBack">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="simpleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#1DB818</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">26sp</item>
        <item name="fontFamily">@font/ibm</item>
    </style>

    <style name="headerTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#26DF21</item>
        <item name="android:textSize">26sp</item>
        <item name="lineHeight">34sp</item>
        <item name="fontFamily">@font/ibm</item>
    </style>

    <style name="hintButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:background">@drawable/hint_button_back</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="questionTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorQuestionText</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">24sp</item>
        <item name="fontFamily">@font/ibm</item>
    </style>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/light_yellow</item>
        <item name="boxStrokeWidth">4dp</item>
    </style>

    <style name="dialogTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDialogText</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">26sp</item>
        <item name="fontFamily">@font/ibm</item>
    </style>

    <style name="primaryButtonStyle2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:radius">0dp</item>
        <item name="android:background">@drawable/sign_in_button_background</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/light_yellow</item>
        <item name="android:inputType">textVisiblePassword</item>

    </style>


    <style name="semicolon" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">21dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/buttonTextColor</item>
    </style>


    <style name="leaderboardTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorQuestionText</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/ibm</item>
        <item name="android:padding">2dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="leaderboardTextStyleEntry" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="fontFamily">@font/ibm</item>
        <item name="android:padding">2dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Instruction" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/privacy_text</item>
        <item name="android:textSize">12dp</item>
        <item name="fontFamily">@font/mulish_regular</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/editTextBackground</item>
        <item name="endIconDrawable">@drawable/ic_end</item>
        <item name="android:background">@drawable/result_drawable</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>
    <style name="enter_usern" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="this_cannot">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="minimum_8_c">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#F00C0C</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#C4C4C4</item>
    </style>
    <style name="are_you_a_c">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="CustomCheckbox02" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="how_did_you">

        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>


    </style>
    <style name="mytheme" parent="android:style/Theme.Translucent">

        <item name="android:windowContentOverlay">@null</item>

        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="countdown" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/light_yellow</item>
    </style>

    <style name="leaderboard_countdown" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">17dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/light_yellow</item>
    </style>





</resources>