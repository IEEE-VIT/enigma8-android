<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="10dp"
    android:background="@drawable/powerupcard_bg"
    android:gravity="center_horizontal"
    android:backgroundTint="@android:color/transparent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/powerupused"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="150dp"
        android:src="@drawable/ic_powerup_used"
        android:visibility="invisible"/>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"

            android:src="@drawable/powerupcard_bg" />
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

    <ImageView
        android:outlineAmbientShadowColor="@color/light_blue"
        android:id="@+id/icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/powerupicon_shadow" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/name"
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cinzel_bold"
        android:textStyle="bold"
        android:textColor="@color/light_yellow"
        android:textSize="18sp"
        android:text="Powerup Name"
         />

    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0FA3B1"
        android:layout_margin="1dp"
        android:fontFamily="@font/mulish_regular"
        android:text="Use a hint without losing any points and get ahead in the game!"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>