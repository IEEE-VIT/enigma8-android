<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent">


    <ImageView
        android:id="@+id/point1"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/instruction_point1"
        app:srcCompat="@drawable/ic_point_new" />

    <TextView
        android:id="@+id/instruction_point1"
        style="@style/Instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:fontFamily="@font/mulish_regular"
        android:text="@string/ins4a"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toEndOf="@+id/point1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/point2"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/instruction_point2"
        app:srcCompat="@drawable/ic_point_new" />

    <TextView
        android:id="@+id/instruction_point2"
        style="@style/Instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/mulish_regular"
        android:text="A room is locked when the player does not have the\nminimum amount of keys to unlock it else if the\nplayer hasnâ€™t yet chosen a powerup for that room."
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.229"
        app:layout_constraintStart_toEndOf="@+id/point2"
        app:layout_constraintTop_toBottomOf="@+id/instruction_point1" />

    <ImageView
        android:id="@+id/point3"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/instruction_point3"
        app:srcCompat="@drawable/ic_point_new" />

    <TextView
        android:id="@+id/instruction_point3"
        style="@style/Instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/mulish_regular"
        android:text="A room is unlocked when the player has sufficient\nkeys and has chosen a powerup for that room."
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toEndOf="@+id/point3"
        app:layout_constraintTop_toBottomOf="@+id/instruction_point2" />


    <ImageView
        android:id="@+id/point4"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/instruction_point4"
        app:srcCompat="@drawable/ic_point_new" />

    <TextView
        android:id="@+id/instruction_point4"
        style="@style/Instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/mulish_regular"
        android:text="A room is solved only when a player solves all three\nquestions in that room"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toEndOf="@+id/point4"
        app:layout_constraintTop_toBottomOf="@+id/instruction_point3" />

    <ImageView
        android:id="@+id/room_door"
        android:layout_width="146dp"
        android:layout_height="196dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instruction_point4"
        app:srcCompat="@drawable/roominst" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@+id/room_door"
        app:layout_constraintTop_toBottomOf="@+id/instruction_point4"
        app:srcCompat="@drawable/ic_question_solved" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="24dp"
        android:padding="2dp"
        app:layout_constraintStart_toEndOf="@+id/room_door"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:srcCompat="@drawable/ic_question_locked" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:padding="5dp"
        app:layout_constraintStart_toEndOf="@+id/room_door"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/ic_question_unlocked" />

    <TextView
        android:id="@+id/question_solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="25dp"

        android:fontFamily="@font/mulish_regular"
        android:text="Question Solved"
        android:textColor="@color/notification_time"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/instruction_point4" />

    <TextView
        android:id="@+id/question_unlocked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/mulish_regular"
        android:text="Question Unlocked"
        android:textColor="@color/notification_time"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/question_solved" />

    <TextView
        android:id="@+id/question_locked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/mulish_regular"
        android:text="Question Locked"
        android:textColor="@color/notification_time"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/question_unlocked" />


</androidx.constraintlayout.widget.ConstraintLayout>