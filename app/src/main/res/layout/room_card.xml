<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/roomImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"

        android:layout_marginTop="40dp"
        android:src="@drawable/room_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/center" />

    <ImageView
        android:id="@+id/rightLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:src="@drawable/room_fire_black"
        app:layout_constraintBottom_toTopOf="@+id/right"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/leftLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:src="@drawable/room_fire_black"
        app:layout_constraintBottom_toTopOf="@+id/left"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"

        android:layout_marginBottom="8dp"
        android:src="@drawable/room_torch"
        app:layout_constraintBottom_toTopOf="@+id/roomImage"
        app:layout_constraintStart_toEndOf="@id/left"
        app:layout_constraintTop_toTopOf="@+id/roomName"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/centerLamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:src="@drawable/room_fire_black"



        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"

        android:src="@drawable/room_torch"
        app:layout_constraintBottom_toTopOf="@+id/roomName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/centerLamp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/room_torch"
        app:layout_constraintBottom_toTopOf="@+id/roomImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/roomName"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/roomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="188dp"

        android:fontFamily="@font/roboto"
        android:text="Room 1"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/centerLamp" />

</androidx.constraintlayout.widget.ConstraintLayout>
