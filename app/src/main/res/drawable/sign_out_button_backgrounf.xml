<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/rippleBackColor"/>
            <stroke
                android:color="@color/rippleStrokeColor"
                android:width="2dp"/>

        </shape>
    </item>
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <stroke
                android:color="@color/enigmaColor"
                android:width="2dp"/>
        </shape>
    </item>
</selector>